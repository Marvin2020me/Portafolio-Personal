<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.perfil.PerfilFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="16dp"
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Nombres -->
        <TextView
            android:id="@+id/tvNombresLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombres:"
            android:textStyle="bold"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvNombresValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mario Alfonso"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@id/tvNombresLabel"
            app:layout_constraintStart_toEndOf="@id/tvNombresLabel"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Apellidos -->
        <TextView
            android:id="@+id/tvApellidosLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apellidos:"
            android:textStyle="bold"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvNombresLabel"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvApellidosValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="González Guarin"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@id/tvApellidosLabel"
            app:layout_constraintStart_toEndOf="@id/tvApellidosLabel"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Documento -->
        <TextView
            android:id="@+id/tvDocumentoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Documento:"
            android:textStyle="bold"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvApellidosLabel"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvDocumentoValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1111339543"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@id/tvDocumentoLabel"
            app:layout_constraintStart_toEndOf="@id/tvDocumentoLabel"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Dirección -->
        <TextView
            android:id="@+id/tvDireccionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dirección:"
            android:textStyle="bold"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvDocumentoLabel"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvDireccionValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Calle 1 # 3-32"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@id/tvDireccionLabel"
            app:layout_constraintStart_toEndOf="@id/tvDireccionLabel"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Profesión -->
        <TextView
            android:id="@+id/tvProfesionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profesión:"
            android:textStyle="bold"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvDireccionLabel"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvProfesionValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ingeniero de Software"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@id/tvProfesionLabel"
            app:layout_constraintStart_toEndOf="@id/tvProfesionLabel"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Línea separadora antes de Experiencia Laboral -->
        <View
            android:id="@+id/lineaExperiencia"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/tvProfesionLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvExperienciaTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Experiencia Laboral"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@id/lineaExperiencia"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvExperiencia1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ingeniero en Sistemas Jr, Todo Clic, 01/2016 - 06/2017"
            android:layout_marginTop="4dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@id/tvExperienciaTitulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvExperiencia2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ingeniero en Sistemas, DevoTeam, desde junio 2017"
            android:layout_marginTop="4dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@id/tvExperiencia1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Línea separadora antes de Conocimientos -->
        <View
            android:id="@+id/lineaConocimientos"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/tvExperiencia2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvConocimientosTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conocimientos"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@id/lineaConocimientos"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvConocimientosValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Conocimientos de programación en Java, C++, Python, PHP, bases de datos, algoritmos y estructuras de datos, principios de ingeniería, pruebas y depuración de software, seguridad informática."
            android:layout_marginTop="4dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:maxLines="6"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/tvConocimientosTitulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botones -->
        <Button
            android:id="@+id/btnCurriculum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ver Currículum"
            android:layout_marginTop="24dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@id/tvConocimientosValue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnPortafolio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ver Portafolio"
            android:layout_marginTop="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@id/btnCurriculum"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/imageBackground"
            android:layout_width="127dp"
            android:layout_height="127dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_circle_photo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView"
            android:layout_width="127dp"
            android:layout_height="127dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:src="@mipmap/foto"
            android:contentDescription="@string/foto_perfil"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/CircularImage"
            app:layout_constraintTop_toTopOf="@id/imageBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
